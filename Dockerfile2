FROM python:3.7

WORKDIR /api

COPY requirements.txt ./requirements.txt

COPY models/ /api/models/

COPY api/ /api/api/

RUN ls -R /api

# EXPOSE 8080

RUN pip install -r requirements.txt

# configure the container to run in an executed manner
ENTRYPOINT [ "python" ]

CMD ["api/api/app.py" ]

#CMD python /api/api/app.py --server.port $PORT



