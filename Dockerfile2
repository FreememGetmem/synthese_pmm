FROM python:3.9

WORKDIR /api

COPY requirements.txt ./requirements.txt

COPY models/ /api/models/

COPY api/ /api/api/

RUN ls -R /api

# EXPOSE 8080

RUN pip install -r requirements.txt

CMD python /api/api/app.py

